<views:ActionEditorViewBase x:Class="EcgEngine.Module.ActionEditors.Views.PlayAnimationEditor"
             xmlns:views="clr-namespace:EcgEngine.Module.ActionEditors.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:viewmodels="clr-namespace:EcgEngine.Module.ActionEditors.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DataContext="{d:DesignInstance Type=viewmodels:PlayAnimationEditorViewModel}"             
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel Width="280"
                Height="250"
                HorizontalAlignment="Center">
        <TextBlock Text="PlayAnimation"
                   Style="{StaticResource EditorTitleText}" />
        <TextBlock Text="Animation Name"
                   Style="{StaticResource EditorInformationText}" />

        <TextBox Text="{Binding AnimationName}"
                 Style="{StaticResource ActionEditorTextBox}"/>
    </StackPanel>
</views:ActionEditorViewBase>
