<UserControl x:Class="EcgEngine.Core.Dialogs.Views.TextInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:viewmodels="clr-namespace:EcgEngine.Core.Dialogs.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=viewmodels:TextInputDialogViewModel}" 
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>
        <TextBlock Text="{Binding Message}" 
                   d:Text="Please enter package name"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   FontSize="28" 
                   Width="450" 
                   Height="150" 
                   TextWrapping="Wrap" />

        <TextBox Text="{Binding UserInput}" 
                 Width="250" Height="40" FontSize="22" 
                 d:Text="Package2"
                 TextAlignment="Center"/>

        <Button Content="Ok" Margin="0 15 0 0" 
                Width="150" Height="35" HorizontalAlignment="Center"
                Command="{Binding CloseDialogCommand}" />
    </StackPanel>
</UserControl>
